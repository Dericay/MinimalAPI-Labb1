@model BooksDTO

<h1>Edit book</h1>
<hr />

<div class="row">
    <div class="col-md-4">
        <form asp-action="UpdateBook">
            <input asp-for="ID" hidden />
            <div class="from-group">
                <label asp-for="BookTitle" class="control-group"></label>
                <input asp-for="BookTitle" class="form-control" />
            </div>
            <div class="from-group">
                <label asp-for="Author" class="control-group"></label>
                <input asp-for="Author" class="form-control" />
            </div>
            <div class="from-group">
                <label asp-for="Genre" class="control-group"></label>
                <input asp-for="Genre" class="form-control" />
            </div>
            <div class="from-group">
                <label asp-for="Description" class="control-group"></label>
                <input asp-for="Description" class="form-control" />
            </div>

            <div class="form-group form-check">
                <label class="form-check-label">
                    <input class="form-check-input" asp-for="IsAvailable" /> @Html.DisplayNameFor(model => model.IsAvailable)
                </label>
            </div>

            <div class="form-group">
                <input type="submit" valute="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>
<div>
    <a asp-action="BookIndex">Back to List</a>
</div>